<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_productos_to_pedido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dondecompro.frsf.utn.dondecomproapp.ProductosToPedido"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <Button
            android:text="Cargar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAceptar"
            android:singleLine="true"
            android:layout_weight="0.54"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <Button
            android:text="Escanear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEscanearProducto"
            android:singleLine="true"
            android:layout_weight="0.54"
            android:textStyle="normal|bold" />

    </LinearLayout>

   <!-- <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etFilterProdToPed"
        android:hint="buscar producto" />-->

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvProductosToPedido"
        android:minHeight="100dp"
        android:dividerHeight="7dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:layout_weight="0.44"
        android:background="@color/wallet_bright_foreground_holo_dark" />

</LinearLayout>


